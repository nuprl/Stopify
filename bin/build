#!/bin/bash

./node_modules/.bin/tsc

if [[ $? -ne 0 ]]; then
  echo 'Typescipt compilation failed!'
  exit 1
fi

# Create the runtimes directory
mkdir -p runtimes

# link the stopify executable
if ! hash stopify; then
  npm link
  npm link Stopify
fi

if [ ! -L node_modules/Stopify ]; then
    (cd node_modules; ln -s .. Stopify)
fi
